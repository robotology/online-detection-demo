    <module>
        <name>karmaMotor</name>
        <parameters></parameters>
        <deployer></deployer>
        <node>iiticublap235</node>
    </module> 
    
        <module>
        <name>AnnotationsPropagator.py</name>
        <parameters>--from /home/elisa/Repos/online-detection-demo/app/config/annotations_propagator_conf.ini</parameters>
        <deployer>python3.5</deployer>
        <node>localhost</node>
    </module>

    <module>
        <name>blobAnnotation</name>
        <node>localhost</node>
        <parameters></parameters>
    </module>

    <module>
        <name>BoxesVisualizer.py</name>
        <parameters>--from contexts/online-detection-demo/annotations_propagator_conf.ini</parameters>
        <deployer>python3.5</deployer>
        <node>localhost</node>
    </module>

    <module>
        <name>BoxesVisualizer.py</name>
